{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "nodenext",
    "types": ["node"],
    "paths": {
      "@/*": ["../client/src/*"]
    }
  },
  "include": ["./**/*.ts", "../shared/**/*.ts", "../server/**/*.ts"],
  "exclude": ["node_modules", "dist", "../client/**", "../server/vite.ts"]
}
