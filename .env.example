# Server
PORT=3000
NODE_ENV=development

# Optional: Neon DATABASE_URL (not needed if using Firebase)
# DATABASE_URL=postgresql://user:pass@host:port/dbname

# Firebase service account
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=your-service-account-email@your-project.iam.gserviceaccount.com
# Replace newlines with \n when putting the private key in env files
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# Calendly (optional)
CALENDLY_LINK=https://calendly.com/your-handle/30min
CALENDLY_WEBHOOK_URL=https://hooks.example.com/calendly

# Automation forwarding (optional)
N8N_WEBHOOK_URL=https://hooks.example.com/n8n

# Email (SMTP)
EMAIL_USER=you@example.com
EMAIL_PASSWORD=supersecret
FROM_EMAIL=you@example.com
ADMIN_EMAIL=owner@example.com
