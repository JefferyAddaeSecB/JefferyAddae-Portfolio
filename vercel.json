{
  "buildCommand": "npm ci && npm --prefix client ci && npm --prefix client run build",
  "outputDirectory": "client/dist",
  "functions": {
    "api/**/*.ts": {
      "runtime": "nodejs20.x"
    }
  },
  "rewrites": [
    { "source": "/api/:path*", "destination": "/api/:path*" },
    { "source": "/assets/:path*", "destination": "/assets/:path*" },
    { "source": "/projects/:path*", "destination": "/projects/:path*" },
    { "source": "/docs/:path*", "destination": "/docs/:path*" },
    { "source": "/favicon.ico", "destination": "/assets/profile/profile-image.jpg" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
